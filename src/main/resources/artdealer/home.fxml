<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="artdealer.HomeController">
   <children>
      <ImageView>
         <image>
            <Image url = "@coffee.jpg" />
         </image>
      </ImageView>
      <Label text="WELCOME TO THE COFFEE SHOP!" Font="SansSerif Regular" />
      <Button fx:id="customerLoginButton" text="Customer" onAction="#switchToCustomerPg"/>
      <Button fx:id="employeeLoginButton" text="Employee" onAction="#switchToEmployeePg"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
